<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Online_Market_Application.Views.GetStartedPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid>
            <StackLayout  HorizontalOptions="CenterAndExpand" Margin="10,150,10,10">
                <Label x:Name="label" Text="Get Started" FontSize="36" FontAttributes="Bold" TextColor="Black"/>
            </StackLayout>
            <StackLayout>
                <StackLayout VerticalOptions="CenterAndExpand" Margin="15,150,15,0">
                    <Frame Padding="0" CornerRadius="30" Margin="70, 0, 70, 10">
                        <Button Text="Login" TextColor="Black" FontAttributes="Bold" BackgroundColor="WhiteSmoke"  Clicked="Button_Clicked_Login"/>
                    </Frame>
                    <Frame Padding="0" CornerRadius="30" Margin="70, 0, 70, 0">
                        <Button Text="Sign Up" TextColor="White" FontAttributes="Bold" BackgroundColor="Black" Clicked ="Button_Clicked_SignUp"/>
                    </Frame>
                    
                </StackLayout>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>